{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.js",
    "lib/**/*.json",
    "bin/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
